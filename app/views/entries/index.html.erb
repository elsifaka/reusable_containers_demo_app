<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />

    <title></title>
  </head>
<body>
 <div id="content">
    <div class="logo">
      <div class="textLogo">
           Administration
      </div>
    </div>

   <div class="gauche">
      <div class="entrer">
            <ul>
            	<li> <a href="entries" target="_blank">Entries</a> </li>
              <li> <a href="blog_posts" target="_blank">Blog posts</a> </li>
            	<li> <a href="containers" target="_blank">Containers</a> </li>
            	<li> <a href="navigations" target="_blank">Navigation</a> </li>
            	<li> <a href="navigation_entries" target="_blank">Navigation entries</a> </li>
              <li> <a href="container_navigations" target="_blank">Container navigation</a> </li>					  	
            </ul>
          </div>
         </div>
<div class="droite">

<table border = 1>
  <tr id = "text-table">
    <th>Name</th>
    <th>Permalink</th>
    <th>Title</th>
    <th>Destination action</th>
    <th>Destination content</th>
    <th>Destination content type</th>
    <th>Container</th> 
    <th>Actions</th>
    
  </tr>

<% @entries.each do |entry| %>
  <tr>
    <td><%= entry.name %></td>
    <td><%= entry.permalink %></td>
    <td><%= entry.title %></td>
    <td><%= entry.destination_action %></td>
    <td><%= entry.destination_content_id %></td>
    <td><%= entry.destination_content_type %></td>
    <td><%= entry.container_id %></td> 
    <td>
      <%= link_to 'Public view', entry.permalink %>
      <%= link_to 'Afficher', :action => 'show', :id => entry %>
     <%= link_to 'Edit', edit_entry_path(entry) %>
     <%= link_to 'Destroy', entry, confirm: 'Are you sure?', method: :delete %>
  </td>
  </tr>
<% end %>
</table>

<br />
<div class="new">
<%= link_to 'New Entry', new_entry_path%>
</div>
</div>
</div>
</body>
</html>
